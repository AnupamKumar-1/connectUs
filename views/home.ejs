
<section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user){ %>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3" placeholder="<%= user.name%>, share your thoughts..."></textarea>
        <input type="submit" value="Post">
    </form>
    <% } %>

    <div id="posts-list-container">
        <ul>
            <% for(post of posts){ %>
                
            <li>
               <small> <%=  post.user.name  %></small>
               <br>
                  <h3>  <%= post.content %></h3>
              
            </li>
                
            <%} %>
        </ul>
    </div>
</section>